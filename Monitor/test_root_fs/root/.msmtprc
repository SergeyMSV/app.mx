# Set default values for all following accounts.
defaults
tls              on
tls_trust_file   /etc/ssl/certs/ca-certificates.crt
logfile          ~/.msmtp.log

# Account 1
account          account_A
host             smtp.gmail.com
port             587
auth             on
from             email@gmail.com
user             Username
password         Password

# Set a default account
account default : account_A
